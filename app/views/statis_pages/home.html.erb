<% provide :title, t("home.title") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%=  t "home.micropost_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "home.welcome" %></h1>
    <h2>
      <%= t "home.description_text_1" %>
      <%= link_to t("home.description_text_2"), "#", class: "underline" %>
      <%= t "home.description_text_3" %>
    </h2>
    <%= link_to t("home.sign_up_text"), "#", class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
