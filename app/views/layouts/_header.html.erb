<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to Settings.app_name, "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("header.home"), "#" %></li>
        <li><%= link_to t("header.help"), "#" %></li>
        <% if logged_in? %>
          <li><%= link_to t("header.users"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", data: { toggle: "dropdown" } do %>
              <%= t "header.account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("header.profile"), current_user %></li>
              <li><%= link_to t("header.settings"),  edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li> <%= link_to t("header.log_out"), logout_path, data: { turbo_method: :delete } %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("header.log_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
